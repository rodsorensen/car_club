<h1>Listing cars</h1>

<table>
  <thead>
    <tr>
      <th>Year</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.year %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= brief_description car %></td>
        <td><%= car.user %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

